@page "/MixedChart"
@using ChartJs.Blazor.ChartJS.BarChart.Dataset
@using ChartJs.Blazor.ChartJS.Common
@using ChartJs.Blazor.ChartJS.LineChart
@using ChartJs.Blazor.ChartJS.MixedChart
@using ChartJs.Blazor.Sample.Shared.Components
@using ChartJs.Blazor.Util.Color
@using Newtonsoft.Json

<h2>Mixed Charts</h2>
<div class="row">
    <button class="btn btn-primary" onclick="@UpdateChart">Update Chart </button>
</div>
<ChartJsMixedChart ref="mixedChart" Config="@mixedChartConfig" Width="600" Height="300"/>

<DataSetDisplay ref="_dataSetDisplay" bind-DataSetsStr="@DataSetsStr" Width="600" Height="300"/>

@functions {

    MixedChartConfig mixedChartConfig { get; set; }
    ChartJsMixedChart mixedChart;
    DataSetDisplay _dataSetDisplay;

    string DataSetsStr
    {
        get => JsonConvert.SerializeObject(mixedChartConfig.Data.Datasets, Formatting.Indented);
        set
        {
            mixedChartConfig.Data.Datasets = JsonConvert.DeserializeObject<List<IMixableDataset>>(value);
            Console.WriteLine(JsonConvert.SerializeObject(mixedChartConfig.Data.Datasets));
        }
    }

    protected override void OnInit()
    {
        mixedChartConfig = mixedChartConfig ?? new MixedChartConfig
        {
            CanvasId = "myFirstMixedChart",
            Options = new MixedChartOptions
            {
                Text = "Sample chart from Blazor",
                Display = true,
                Responsive = true,
                Legend = new ChartJS.Common.Legend
                {
                    Position = LegendPosition.LEFT.ToString(),
                    Reverse = true,
                    Labels = new Labels
                    {
                        UsePointStyle = true,
                        BoxWidth = 85,
                        Padding = 55,
                        FontSize = 15,
                        FontColor = ColorUtil.ColorHexString(205, 205, 205),
                        FontStyle = "Helvetica"
                    }
                }
            },
            Data = new MixedChartData
            {
                Labels = new List<string> {"Red", "Blue", "Yellow", "Green", "Purple", "Orange"},
                Datasets = new List<IMixableDataset>
                {
                    new BarChartDataset
                    {
                        Label = "1'st dataset",
                        BackgroundColor = "#4465fe",
                        BorderColor = "#4465fe",
                        Data = new List<object> {19, 12, 5, 3, 3, 2}
                    },
                    new LineChartDataset
                    {
                        BackgroundColor = "#ff6384",
                        BorderColor = "#ff6384",
                        Label = "2'nd dataset",
                        Data = new List<object> {19, 12, 5, 3, 3, 2},
                        Fill = false,
                        BorderWidth = 2,
                        PointRadius = 3,
                        PointBorderWidth = 1
                    }
                    ,
                    new BarChartDataset
                    {
                        Label = "3'rd dataset",
                        BackgroundColor = "#cc65fe",
                        BorderColor = "#cc65fe",
                        Data = new List<object> {19, 12, 5, 3, 3, 2}
                    }
                }
            }
        };
    }

    protected override void OnAfterRender()
    {
        Console.WriteLine("OnAfterRender");
        mixedChart.Reload();

        _dataSetDisplay.OnUpdatedDataSetsStr += (dataSetsStr) =>
        {
            mixedChartConfig.Data.Datasets = JsonConvert.DeserializeObject<List<IMixableDataset>>(dataSetsStr);
            mixedChart.Reload();
        };
    }

    public void UpdateChart()
    {
        mixedChartConfig.Data.Labels.Add($"P {mixedChartConfig.Data.Labels.Count + 1}");
        mixedChartConfig.Data.Datasets.ForEach(dataset => dataset.Data.Add(DateTime.Now.Second));

        mixedChart.Reload();
    }

}